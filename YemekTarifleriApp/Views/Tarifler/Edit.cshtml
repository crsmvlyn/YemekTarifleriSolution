@model YemekTarifleriApp.Models.Tarif

@{
    ViewData["Title"] = "Tarifi Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="glass-box w-100 text-start">

                <h2 class="text-center mb-4" style="font-family: 'Pacifico', cursive; color: #d35400;">✏️ Tarifi Düzenle</h2>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="Ad" class="control-label fw-bold">Tarif Adı</label>
                        <input asp-for="Ad" class="form-control" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Malzemeler" class="control-label fw-bold">Malzemeler</label>
                        <textarea asp-for="Malzemeler" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Malzemeler" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Yapilis" class="control-label fw-bold">Yapılış</label>
                        <textarea asp-for="Yapilis" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Yapilis" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ResimUrl" class="control-label fw-bold">Resim Linki</label>
                        <input asp-for="ResimUrl" class="form-control" />
                        <span asp-validation-for="ResimUrl" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="KategoriId" class="control-label fw-bold">Kategori</label>
                        <select asp-for="KategoriId" class="form-control" asp-items="ViewBag.KategoriId"></select>
                        <span asp-validation-for="KategoriId" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center d-grid gap-2">
                        <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-primary btn-lg" />
                        <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}