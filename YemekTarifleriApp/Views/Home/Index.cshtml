@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center p-5 mb-5 rounded-3 shadow-lg"
     style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1495521821757-a1efb6729352?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');
            background-size: cover; background-position: center; color: white;">

    <div class="container py-5">
        <h1 class="display-3 fw-bold mb-3" style="font-family: 'Pacifico', cursive;">Lezzet Dünyası</h1>
        <p class="fs-4 mb-4">En güzel yemek tariflerini keşfet, kendi mutfağının şefi ol!</p>

    </div>
</div>

<div class="container">
    <div class="row text-center g-4">

        <div class="col-md-4">
            <a href="/Kategoriler" class="text-decoration-none text-dark">
                <div class="card h-100 border-0 shadow-sm hover-effect" style="transition: transform 0.2s; background-color: #fff;">
                    <div class="card-body p-4">
                        <div class="display-4 mb-3">📂</div>
                        <h3 class="h4 fw-bold">Kategoriler</h3>
                        <p class="text-muted">Tatlılar, tuzlular ve daha fazlası.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="/Tarifler" class="text-decoration-none text-dark">
                <div class="card h-100 border-0 shadow-sm hover-effect" style="transition: transform 0.2s; background-color: #fff;">
                    <div class="card-body p-4">
                        <div class="display-4 mb-3">🍰</div>
                        <h3 class="h4 fw-bold">Tüm Tarifler</h3>
                        <p class="text-muted">Paylaşılan bütün lezzetleri incele.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="/Tarifler/Create" class="text-decoration-none text-dark">
                <div class="card h-100 border-0 shadow-sm hover-effect" style="transition: transform 0.2s; background-color: #fff;">
                    <div class="card-body p-4">
                        <div class="display-4 mb-3">✍️</div>
                        <h3 class="h4 fw-bold">Sen de Yaz</h3>
                        <p class="text-muted">Kendi özel tarifini sisteme ekle.</p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>

<style>
    .hover-effect:hover {
        transform: translateY(-5px);
        background-color: #fffde7 !important; /* Üzerine gelince hafif sararır */
        cursor: pointer;
    }
</style>