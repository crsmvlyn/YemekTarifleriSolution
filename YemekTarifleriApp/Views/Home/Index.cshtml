@{
    ViewData["Title"] = "Ana Sayfa";
}

<link href="https://fonts.googleapis.com/css2?family=Lobster&family=Dancing+Script:wght@700&display=swap" rel="stylesheet">

<div class="text-center p-5 mb-4 rounded-3 shadow-lg position-relative d-flex align-items-center justify-content-center"
     style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://www.pluggedin.com/wp-content/uploads/2019/12/ratatouille.png');
            background-size: cover; background-position: center; color: white; min-height: 450px; border: 2px solid rgba(255,255,255,0.3);">

    <div class="container bg-transparent shadow-none">
        <h1 class="display-2 mb-3" style="font-family: 'Lobster', cursive; color: #ffca28; text-shadow: 3px 3px 0px #000;">
            "Herkes yemek yapabilir."
        </h1>

        <p class="fs-2 text-white" style="font-family: 'Dancing Script', cursive;">
            - Şef Gusteau
        </p>

        <p class="fs-4 mt-4 text-light fw-light">
            Yepyeni yemek tarifleri keşfet, kendi mutfağının şefi ol!
        </p>
    </div>
</div>

<div class="container bg-transparent shadow-none mt-0">
    <div class="row text-center g-4">

        <div class="col-md-4">
            <a href="/Kategoriler" class="text-decoration-none text-dark">
                <div class="card h-100 border-0 shadow hover-effect">
                    <div class="card-body p-4">
                        <div class="display-4 mb-3">🧀</div>
                        <h3 class="h4" style="font-family: 'Lobster', cursive; color: #2c3e50;">Kategoriler</h3>
                        <p class="text-muted small">Tatlılar, tuzlular ve mutfağın tüm renkleri.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="/Tarifler" class="text-decoration-none text-dark">
                <div class="card h-100 border-0 shadow hover-effect">
                    <div class="card-body p-4">
                        <div class="display-4 mb-3">🥘</div>
                        <h3 class="h4" style="font-family: 'Lobster', cursive; color: #2c3e50;">Tüm Tarifler</h3>
                        <p class="text-muted small">Başkaları neler pişirmiş? İlham alma zamanı.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="/Tarifler/Create" class="text-decoration-none text-dark">
                <div class="card h-100 border-0 shadow hover-effect">
                    <div class="card-body p-4">
                        <div class="display-4 mb-3">👨‍🍳</div>
                        <h3 class="h4" style="font-family: 'Lobster', cursive; color: #2c3e50;">Sen de Yaz</h3>
                        <p class="text-muted small">Kendi imza yemeğini dünyaya tanıt.</p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>

<style>
    /* Sadece Hover efekti kaldı, arka plan body'den geliyor */
    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.3) !important;
            background-color: #fffde7 !important;
            border: 2px solid #ffca28 !important;
            cursor: pointer;
        }
</style>

<style>
    /* Bu sayfadaki container şeffaf olsun ki arkadaki Paris görünsün */
    .container {
        background-color: transparent !important;
        box-shadow: none !important;
        border: none !important;
    }
</style>