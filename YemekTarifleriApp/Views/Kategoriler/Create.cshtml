@model YemekTarifleriApp.Models.Kategori

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="glass-box w-100 text-center">

                <h2 class="mb-4" style="font-family: 'Pacifico', cursive; color: #d35400;">📂 Yeni Kategori Oluştur</h2>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-4 text-start">
                        <label asp-for="Ad" class="control-label fw-bold">Kategori Adı</label>
                        <input asp-for="Ad" class="form-control form-control-lg" placeholder="Örn: Fransız Mutfağı, Deniz Ürünleri..." />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2">
                        <input type="submit" value="Kategoriyi Kaydet" class="btn btn-success btn-lg shadow-sm" />
                        <a asp-action="Index" class="btn btn-outline-secondary">Vazgeç</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}