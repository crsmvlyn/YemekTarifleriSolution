@model IEnumerable<YemekTarifleriApp.Models.Kategori>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 style="font-family: 'Pacifico', cursive; color: #d35400;">Mutfak Rafları</h1>
        <p class="text-muted">Ne pişirmek istersiniz?</p>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4">➕ Yeni Kategori Ekle</a>
    </div>

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                    <div class="card text-center shadow-sm h-100 border-warning" style="border-width: 2px; transition: 0.3s;">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-4">
                            <span class="display-4">📂</span>
                            <h3 class="h5 mt-3 text-dark fw-bold">@item.Ad</h3>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>